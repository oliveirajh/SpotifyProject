<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/src/styles/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="shortcut icon" href="/src/images/spotifyLogo.svg" type="image/x-icon">
    <title><%= artist.name %> | Spotify API</title>
</head>
<body class="selection:bg-[#20d46573] pb-5">

    <!-- Navbar -->
    <div id="navbar" class="flex lg:justify-between justify-center lg:flex-row flex-col items-center w-full mx-auto p-5">
        <div class="flex items-center">
            <a href="/home/search/<%= artist.name.toLowerCase() %>?type=artist">
                <button class="text-white font-[500] bg-[#4444447a] py-2 px-[15px] rounded-3xl text-sm hover:bg-[#20d4652a] transition-all duration-700 m-5">Voltar</button>
            </a>
            
            <a href="#">
                <img src="/src/images/SpotifyAPILogo.svg" alt="Spotify API Logo" class="h-8">
            </a>
        </div>

        <form id="searchForm" method="POST" class="w-full lg:w-auto mt-4 lg:mt-0">
            <div class="flex items-center justify-center lg:justify-end">
                <input type="text" autocomplete="off" name="search" id="search" class="bg-transparent text-white pr-5 pl-4 py-1 w-[180px] lg:w-[300px] outline-4 outline outline-[#4444447a] rounded-l-3xl" placeholder="Search for a song...">
                <select class="bg-[#4444447a] text-white appearance-none pl-3 pr-6 py-2 focus:outline-none rounded-r-3xl bg-[url('/src/images/arrow.svg')] bg-no-repeat bg-[length:15px] bg-[position:calc(100%-10px)_center]" name="type" id="type">
                    <option value="track" class="bg-[#444444] text-white">Track</option>
                    <option value="artist" class="bg-[#444444] text-white">Artist</option>
                    <option value="album" class="bg-[#444444] text-white">Album</option>
                </select>
                <button class="text-white font-[500] bg-[#4444447a] py-2 px-[15px] rounded-3xl text-sm hover:bg-[#20d4652a] transition-all duration-700 lg:m-5 ml-2" type="submit">Search</button>
            </div>
        </form>
    </div>

    <!-- Artista -->
    <div class="bg-transparent flex h-fit flex-col items-center mx-auto p-10 w-full lg:w-1/2 text-center">
        <img src="<%= artist.images[0].url %>" class="w-28 lg:w-36 rounded-full border-2 border-[#20d465] mb-3" alt="Profile picture">
        <p class="text-white mb-3 text-sm bg-[#1db954] rounded-full px-4 py-2 inline-block shadow-md">
            <span class="font-bold">Followers:</span> <%= artist.followers.toLocaleString() %>
        </p>    
        <p class="text-white text-center font-bold text-base lg:text-xl">
            Artist: <%= artist.name %> 
            <% if(artist.popularity > 30 && artist.followers > 5000) { %>
                <img src="/src/images/verifiedIcon.svg" alt="Verified icon" class="h-5 inline-block mb-1">
            <% } %>
        </p>        

        <p class="text-white font-semibold py-2 px-6 text-sm">Genres:</p>
        <div class="flex flex-wrap justify-center gap-2">
            <% artist.genres.forEach((genre) => { %>
                <p class="bg-[#1db9543b] border-2 border-[#1db954] text-white rounded-full px-2 py-1 text-xs lg:text-base"><%= `${genre.charAt(0).toUpperCase() + genre.slice(1).toLowerCase()}` %></p>
            <% }) %>
        </div>
    </div>

    <!-- Álbuns e Top Tracks -->
    <div class="flex flex-col lg:flex-row items-center gap-2 lg:gap-4 bg-transparent justify-between lg:justify-center mx-auto w-full lg:w-3/4 p-5">
        
        <div class="bg-[#181818] lg:rounded-lg rounded-none p-5 w-full lg:w-1/2 mb-4 lg:mb-0">
            <h2 class="text-white font-semibold mb-4">Álbuns</h2>
            <div class="grid grid-cols-2 gap-4 lg:grid-cols-2">
                <% albums.slice(0, 4).forEach((album) => { %>
                    <div class="text-center flex flex-col items-center hover:scale-110 transition-all w-full">
                        <a href="<%= album.url %>" target="_blank">
                            <img src="<%= album.images[1].url %>" class="w-full rounded-lg mb-1" alt="Album cover">
                        </a>
                        <p class="text-white text-sm font-bold hover:underline lg:mb-4"><%= album.name.length > 10 ? album.name.substring(0, 10) + '...' : album.name %></p>
                    </div>
                <% }) %> 
            </div>
        </div>
        
        <div class="bg-[#181818] lg:rounded-lg rounded-none p-5 w-full lg:w-1/2">
            <h2 class="text-white font-semibold mb-4">Top Tracks</h2>
            <div class="grid grid-cols-2 gap-4 lg:grid-cols-2">
                <% tracks.slice(0, 4).forEach((track) => { %>
                    <div class="text-center flex flex-col items-center hover:scale-110 transition-all w-full">
                        <a href="<%= track.url %>" target="_blank">
                            <img src="<%= track.album.images[1].url %>" class="w-full rounded-lg mb-1" alt="Track cover">
                        </a>
                        <p class="text-white text-sm font-bold hover:underline"><%= track.name.length > 10 ? track.name.substring(0, 10) + '...' : track.name %></p>
                        <p class="text-[#ffffff65] text-xs hover:text-white inline-block"><%= track.artists[0].name.length > 10 ? track.artists[0].name.substring(0, 10) + '...' : track.artists[0].name %></p>
                    </div>
                <% }) %>  
            </div>
        </div>
    </div>

    <footer class="text-[#ffffff23] text-center mt-5 select-none text-sm lg:text-base">All rights reserved - CompassUOL - AI/ML - Grupo 7</footer>
    <script src="/src/scripts/homeScript.js"></script>
</body>
</html>
