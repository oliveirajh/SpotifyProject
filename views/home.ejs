<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/src/styles/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="shortcut icon" href="/src/images/spotify logo.svg" type="image/x-icon">
    <title>Spotify API</title>
</head>
<body class="selection:bg-[#20d46573]">

    <form action="logout" method="get">
        <button><button class="text-black font-[500] bg-[#20d464] py-2 px-[15px] rounded-3xl text-sm hover:bg-[#20d4652a] transition-all duration-700 m-5">Logout</button>
    </form>

    <div class="bg-transparent flex h-64 w-full flex-col items-center mt-10 mx-auto p-10">
        <img src="<%= data.images[1].url %>" class="w-24 rounded-full border-2 border-[#20d465] mb-3" alt="Profile picture">
        <p class="text-white mb-3 text-xs border-[#ffffff4b] border-[1px] p-2 rounded-2xl">Followers: <%= data.followers.total %></p>
        <p class="text-white text-center font-bold text-xl">Bem-vindo de volta, <%= data.display_name %><% if (data.product === 'premium') { %> <img src="/src/images/verifiedIcon.svg" alt="Verified icon" class="h-5 inline-block"> <% } %>!</p>
    </div>

        <!-- Current Track Card -->
        <% if (currentTrack) {%>
            <div class="bg-[#ffffff0e] right-5 bottom-5 p-5 fixed rounded-md">

                <p class="text-white text-lg font-bold mb-2">Now Playing</p>

                <a href="<%= currentTrack.item.album.external_urls.spotify %>" target="_blank"><img class="h-56 rounded-md" src="<%= currentTrack.item.album.images[0].url %>" alt="Album image"></a>

                <p class="text-white text-sm font-bold mt-3 hover:underline"><a href="<%= currentTrack.item.external_urls.spotify %>" target="_blank"><%= currentTrack.item.name %></a></p>

                <% currentTrack.item.album.artists.forEach((artist, index) => { %>
                    <p class="text-[#ffffff65] text-sm hover:text-white inline-block">
                        <a href="<%= artist.external_urls.spotify %>" target="_blank"><%= artist.name %></a>
                        <% if (index < currentTrack.item.album.artists.length - 1) { %>
                            ,
                        <% } %>
                    </p>
                <% }) %>
            </div>
        <% }; %>

    <footer class="absolute bottom-2 text-[#ffffff23] left-2 select-none text-sm lg:text-base">All rights reserved - CompassUOL - AI/ML - Grupo 7</footer>
    <script src="/src/scripts/script.js"></script>
</body>
</html>